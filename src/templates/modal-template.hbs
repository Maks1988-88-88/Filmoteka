<div class='modal' id="{{id}}">
  <button type='button' class='modal-close-btn' data-modal-close>
      <svg width="30" height="30" viewBox="0 0 30 30" fill="none" xmlns="http://www.w3.org/2000/svg">
          <g id="close">
          <path id="Vector 1" d="M8 8L22 22" stroke="black" stroke-width="2"/>
          <path id="Vector 2" d="M8 22L22 8" stroke="black" stroke-width="2"/>
          </g>
      </svg>
  </button>

  <div class='modal-img-wrap'>
    {{!-- <img src="https://image.tmdb.org/t/p/w500/{{poster_path}}" class='modal-card-img' alt="{{title}}" /> --}}
        <img src="{{poster_path}}" class='modal-card-img' alt="{{title}}" />

  </div>

  <div class='modal-details-wrap'>
    <h1 class='modal-title'>
      {{title}}
    </h1>
    <ul class='modal-details-list'>
      <li class='modal-details-item item-vote'>
        <span class='modal-details-category'>
          Vote / Votes
        </span>
        <span class='modal-category-accent'>
          {{vote_average}}
        </span>
        /
        <span class='details-category-value modal-category-accent'>
          {{vote_count}}
        </span>
      </li>
      <li class='modal-details-item'>
        <span class='modal-details-category'>
          Popularity
        </span>
        <span class='details-category-value'>
          {{popularity}}
        </span>
      </li>
      <li class='modal-details-item'>
        <span class='modal-details-category'>
          Original Title
        </span>
        <span class='details-category-value'>
          {{original_title}}
        </span>
      </li>
      <li class='modal-details-item'>
        <span class='modal-details-category'>
          Genre
        </span>

        <span class='details-category-value'>
          {{genres}}
        </span>
      </li>
    </ul>
    <div class="modal-trailer-wraper">
    <p class="modal-play-trailer">Play</p>
    <svg width="17" height="17" class="modal-play-svg" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 30.051 30.051">
      <path d="M19.982 14.438l-6.24-4.536a.752.752 0 00-1.195.607v9.069a.75.75 0 001.195.606l6.24-4.532a.747.747 0 000-1.214z"/>
      <path d="M15.026.002C6.726.002 0 6.728 0 15.028c0 8.297 6.726 15.021 15.026 15.021 8.298 0 15.025-6.725 15.025-15.021.001-8.3-6.727-15.026-15.025-15.026zm0 27.54c-6.912 0-12.516-5.601-12.516-12.514 0-6.91 5.604-12.518 12.516-12.518 6.911 0 12.514 5.607 12.514 12.518.001 6.913-5.603 12.514-12.514 12.514z"/>
    </svg>
    <p class="modal-play-trailer"></p>Trailer</p>
    </div>
    <h2 class='modal-film-about'>
      About
    </h2>
    <p class='modal-overview-about'>
      {{overview}}
    </p>
    
    <div class="modal-btn-wrapper">
          <button class="btn modal-btn" id="modal-btn-watched" data-btntext ='Watched'>add to Watched</button>
        <button class="btn modal-btn" id="modal-btn-queue" data-btntext ='Queue'>add to queue</button>
    </div>
  </div>
</div>